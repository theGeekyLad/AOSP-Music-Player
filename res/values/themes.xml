<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="AppTheme.MusicPlaybackActivity"
           parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/Widget.MusicPlaybackActivity.ActionBar</item>
    </style>
    
    <style name="AppTheme.MusicBrowserActivity" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/Widget.MusicBrowserActivity.ActionBar</item>
    </style>
    
<!-- ActionBar styles -->
    <style name="Widget.MusicPlaybackActivity.ActionBar"
           parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle|showHome</item>
    </style>
    
    <style name="Widget.MusicBrowserActivity.ActionBar"
           parent="@android:style/Widget.Holo.ActionBar.Solid">
    	<item name="android:displayOptions">showHome|useLogo|showTitle</item>
    </style> 
</resources>